{
  "version": 2,
  "name": "bajaj-insurance-analyzer",
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "HACKATHON_API_TOKEN": "@hackathon_api_token",
    "OPENAI_API_KEY": "@openai_api_key",
    "OPENAI_MODEL": "gpt-4-turbo-preview",
    "ENVIRONMENT": "production",
    "DEVICE": "cpu",
    "DEMO_MODE": "false",
    "PYTHONPATH": ".",
    "VERCEL": "1"
  },
  "functions": {
    "app.py": {
      "maxDuration": 30
    }
  }
}
