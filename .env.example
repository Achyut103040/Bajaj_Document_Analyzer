# HACKATHON CONFIGURATION TEMPLATE
# ⚠️  COPY THIS FILE TO .env AND ADD YOUR REAL API KEYS
# ⚠️  NEVER COMMIT REAL API KEYS TO VERSION CONTROL

#=============================================================================
# HACKATHON SUBMISSION REQUIREMENTS
#=============================================================================

# Hackathon API Token (for Bearer authentication)
# Get this from the hackathon platform
HACKATHON_API_TOKEN=your_hackathon_bearer_token_here

# GPT-4 Configuration (Primary LLM - Required for Hackathon)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Pinecone Configuration (Primary Vector DB - Required for Hackathon)  
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=insurance-docs

#=============================================================================
# SERVER CONFIGURATION
#=============================================================================

# Network Configuration
API_HOST=0.0.0.0
API_PORT=8001
WORKERS=1

# Security Configuration
CORS_ORIGINS=["http://localhost:3000","https://your-domain.com"]
API_RATE_LIMIT=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

#=============================================================================
# PERFORMANCE OPTIMIZATION
#=============================================================================

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Model Configuration
MODEL_CACHE_SIZE=100MB
EMBEDDING_BATCH_SIZE=32
MAX_QUERY_LENGTH=1000

#=============================================================================
# DEPLOYMENT CONFIGURATION
#=============================================================================

# Environment Type
ENVIRONMENT=production
DEBUG=false

# Database Configuration (Optional - Future PostgreSQL support)
DATABASE_URL=postgresql://username:password@localhost:5432/insurance_db
DATABASE_POOL_SIZE=5

#=============================================================================
# DEMO & FALLBACK CONFIGURATION
#=============================================================================

# Demo Mode (Set to true to use local models if APIs unavailable)
DEMO_MODE=false
FALLBACK_TO_LOCAL=true

# Local Model Paths (for offline demo)
LOCAL_MODEL_PATH=./models/
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

#=============================================================================
# MONITORING & ANALYTICS
#=============================================================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
MONITORING_INTERVAL=60

# Performance Targets (Hackathon Requirements)
MAX_RESPONSE_TIME=30
TARGET_RESPONSE_TIME=5
MIN_CONFIDENCE_THRESHOLD=0.4

#=============================================================================
# HACKATHON SPECIFIC
#=============================================================================

# Submission Configuration
SUBMISSION_URL=https://your-deployed-app.railway.app
SUBMISSION_ENDPOINT=/hackrx/run
TEAM_NAME=YourTeamName
PARTICIPANT_EMAIL=your-email@domain.com

# Scoring Optimization
ACCURACY_WEIGHT=0.3
LATENCY_WEIGHT=0.2
TOKEN_EFFICIENCY_WEIGHT=0.2
REUSABILITY_WEIGHT=0.15
EXPLAINABILITY_WEIGHT=0.15
